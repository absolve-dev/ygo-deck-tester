<div class="container">
  <div class="row">
    <h1>My Decks</h1>
    
    <% if @my_decks.count > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Notes</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @my_decks.each do |deck| %>
          <tr>
            <td><%= deck.name %></td>
            <td><%= deck.notes %></td>
            <td><%= link_to 'Analyze', analyze_path(deck) %> | <%= link_to 'Show', deck %> | <%= link_to 'Edit', edit_deck_path(deck) %> | <%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      You have no decks available<br>
    <% end %>
    
    <%= link_to 'New Deck', new_deck_path %>
  </div>
</div>
