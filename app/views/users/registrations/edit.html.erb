<div class="container">
  <div class="row">
    <%= render "users/shared/errors" %>
    <div class="col-xs-4">
      <h1>Account Settings</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="form-group">
          <%= f.label :current_password %><i> (to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <label for="<%= :password %>">New Password</label> <i> (leave blank for no change)</i><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          <label for="<%= :password_confirmation %>">Confirm New Password</label><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update", class: "form-control", style: "margin-bottom: 3px;" %>
          <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure? All of your decks will be deleted." }, method: :delete, class: "form-control" %>
        </div>
      <% end %>
      
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>